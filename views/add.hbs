<div class="container">
  <h1>Add new course</h1>

  <form action="/add" method="POST">
    <div class="input-field">
      <input id="title" name="title" type="text" class="validate" required>
      <label for="title">Course Name</label>
      <span class="helper-text" data-error="Input title"></span>
    </div>
    <div class="input-field">
      <input id="price" name="price" type="number" class="validate" required min="1">
      <label for="price">Price</label>
      <span class="helper-text" data-error="Input price"></span>
    </div>
    <div class="input-field">
      <input id="img" name="image-url" type="text" class="validate" required>
      <label for="img">Image URL</label>
      <span class="helper-text" data-error="Input url"></span>
    </div>
    <button class="btn btn-primary">Add Course</button>
  </form>
</div>